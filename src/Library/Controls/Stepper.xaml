<?xml version="1.0" encoding="utf-8" ?>
<ContentView
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:dpcontrols="clr-namespace:DigitalProduction.Maui.Controls"
	xmlns:local="clr-namespace:DigitalProduction.Maui"
	x:Class="DigitalProduction.Maui.Controls.Stepper">
	<Grid ColumnDefinitions="auto,auto,auto">
		<dpcontrols:StepperButton
			Grid.Column="0"
			x:Name="MinusButton"
			Text="-"
			Clicked="OnMinusButtonClicked"
			VerticalOptions="Center"
			HorizontalOptions="End"/>
		<dpcontrols:StepperLabel
			Grid.Column="1"
			x:Name="ValueLabel"
			HorizontalTextAlignment="Center"
			VerticalOptions="Center"
			HorizontalOptions="Center"/>

		<ImageButton
			Grid.Column="2"
			x:Name="PlusButton"
			Clicked="OnPlusButtonClicked"
			VerticalOptions="Center"
			HorizontalOptions="Start">
			<ImageButton.Source>
				<FontImageSource  
					Glyph="{x:Static local:IconFont.Plus}" 
					FontFamily="FontAwesome" 
					Color="White" 
					Size="30"/>
			</ImageButton.Source>
		</ImageButton>
	</Grid>
</ContentView>